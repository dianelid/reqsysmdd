<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="ReqSysMDD.actionSet1"
            label="Sample Action Set"
            visible="true">
         <menu
               id="MenuReqSysMDD"
               label="ReqSys-MDD">
            <separator
                  name="Transformations">
            </separator>
         </menu>
         <action
               class="reqsysmdd.actions.ActionPL_AOVgraph2FeatureModel"
               id="ReqSysMDD.action1"
               label="PL-AOVgraph to FeatureModel"
               menubarPath="MenuReqSysMDD/Transformations">
         </action>
         <action
               class="reqsysmdd.actions.ActionFeatureModel2PL_AOVgraph"
               id="ReqSysMDD.action2"
               label="FeatureModel to PL-AOVgraph"
               menubarPath="MenuReqSysMDD/Transformations">
         </action>
         <action
               class="reqsysmdd.actions.ActionCrosscuttingConcernIdentification"
               id="ReqSysMDD.action3"
               label="Crosscutting Concern Identification"
               menubarPath="MenuReqSysMDD/Transformations">
         </action>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="ReqSysMDDPlugin"
            name="ReqSys-MDD">
      </category>
      <view
            category="ReqSysMDDPlugin"
            class="reqsysmdd.views.ReqSysMDDView"
            id="ReqSysMDD.view1"
            name="ReqSys-MDD View">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="true"
            id="ReqSysMDD.objectContribution1"
            nameFilter="*.txt"
            objectClass="org.eclipse.core.resources.IResource">
         <menu
               id="ReqSysMDD.menu1"
               label="ReqSys MDD">
            <separator
                  name="TransformationsSeparator">
            </separator>
         </menu>
      </objectContribution>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.xtext.ui.PLAOVgraphExecutableExtensionFactory:org.eclipse.xtext.ui.editor.XtextEditor"
            contributorClass="org.eclipse.ui.editors.text.TextEditorActionContributor"
            default="true"
            extensions="plaovgraph"
            id="org.xtext.PLAOVgraph"
            name="PLAOVgraph Editor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.xtext.ui.PLAOVgraphExecutableExtensionFactory:org.eclipse.xtext.ui.editor.hyperlinking.OpenDeclarationHandler"
            commandId="org.eclipse.xtext.ui.editor.hyperlinking.OpenDeclaration">
         <activeWhen>
            <reference
                  definitionId="org.xtext.PLAOVgraph.Editor.opened">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="org.xtext.ui.PLAOVgraphExecutableExtensionFactory:org.eclipse.xtext.ui.editor.handler.ValidateActionHandler"
            commandId="org.xtext.PLAOVgraph.validate">
         <activeWhen>
            <reference
                  definitionId="org.xtext.PLAOVgraph.Editor.opened">
            </reference>
         </activeWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="org.xtext.PLAOVgraph.Editor.opened">
         <and>
            <reference
                  definitionId="isActiveEditorAnInstanceOfXtextEditor">
            </reference>
            <with
                  variable="activeEditor">
               <test
                     forcePluginActivation="true"
                     property="org.eclipse.xtext.ui.editor.XtextEditor.languageName"
                     value="org.xtext.PLAOVgraph">
               </test>
            </with>
         </and>
      </definition>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="org.xtext.ui.PLAOVgraphExecutableExtensionFactory:org.eclipse.xtext.ui.editor.preferences.LanguageRootPreferencePage"
            id="org.xtext.PLAOVgraph"
            name="PLAOVgraph">
         <keywordReference
               id="org.xtext.ui.keyword_PLAOVgraph">
         </keywordReference>
      </page>
      <page
            category="org.xtext.PLAOVgraph"
            class="org.xtext.ui.PLAOVgraphExecutableExtensionFactory:org.eclipse.xtext.ui.editor.syntaxcoloring.SyntaxColoringPreferencePage"
            id="org.xtext.PLAOVgraph.coloring"
            name="Syntax Coloring">
         <keywordReference
               id="org.xtext.ui.keyword_PLAOVgraph">
         </keywordReference>
      </page>
      <page
            category="org.xtext.PLAOVgraph"
            class="org.xtext.ui.PLAOVgraphExecutableExtensionFactory:org.eclipse.xtext.ui.editor.templates.XtextTemplatePreferencePage"
            id="org.xtext.PLAOVgraph.templates"
            name="Templates">
         <keywordReference
               id="org.xtext.ui.keyword_PLAOVgraph">
         </keywordReference>
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.keywords">
      <keyword
            id="org.xtext.ui.keyword_PLAOVgraph"
            label="PLAOVgraph">
      </keyword>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            description="Trigger expensive validation"
            id="org.xtext.PLAOVgraph.validate"
            name="Validate">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:#TextEditorContext?after=group.edit">
         <command
               commandId="org.xtext.PLAOVgraph.validate"
               style="push"
               tooltip="Trigger expensive validation">
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="org.xtext.PLAOVgraph.Editor.opened">
               </reference>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:#TextEditorContext?endof=group.find">
         <command
               commandId="org.eclipse.xtext.ui.editor.FindReferences">
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="org.xtext.PLAOVgraph.Editor.opened">
               </reference>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.xtext.ui.PLAOVgraphExecutableExtensionFactory:org.eclipse.xtext.ui.editor.findrefs.FindReferencesHandler"
            commandId="org.eclipse.xtext.ui.editor.FindReferences">
         <activeWhen>
            <reference
                  definitionId="org.xtext.PLAOVgraph.Editor.opened">
            </reference>
         </activeWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.emf.ecore.extension_parser">
      <parser
            class="org.xtext.ui.PLAOVgraphExecutableExtensionFactory:org.eclipse.xtext.resource.IResourceFactory"
            type="plaovgraph">
      </parser>
   </extension>
   <extension
         point="org.eclipse.xtext.extension_resourceServiceProvider">
      <resourceServiceProvider
            class="org.xtext.ui.PLAOVgraphExecutableExtensionFactory:org.eclipse.xtext.ui.resource.IResourceUIServiceProvider"
            uriExtension="plaovgraph">
      </resourceServiceProvider>
   </extension>
   <extension
         point="org.eclipse.ui.ide.markerResolution">
      <markerResolutionGenerator
            class="org.xtext.ui.PLAOVgraphExecutableExtensionFactory:org.eclipse.xtext.ui.editor.quickfix.MarkerResolutionGenerator">
      </markerResolutionGenerator>
   </extension>

</plugin>
